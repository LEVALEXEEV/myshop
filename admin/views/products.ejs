<%- include('partials/_head', { title: 'Товары' }) %>
<%- include('partials/_nav', { csrfToken, active: 'products' }) %>

<div class="page">
  <div class="page-header">
    <div>
      <div class="page-header__title">Товары</div>
      <div class="page-header__sub">Управление каталогом. Загружайте изображения со страницы товара.</div>
    </div>
    <a href="/products/new" class="btn btn-primary">+ Добавить товар</a>
  </div>

  <div class="card">
    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Цена, ₽</th>
            <th>Категория</th>
            <th>Статус</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% for (const p of products) { %>
            <tr>
              <td class="muted" style="font-size:12px">#<%= p.id %></td>
              <td>
                <a href="/products/<%= p.id %>" style="font-weight:500"><%= p.title %></a>
              </td>
              <td><%= p.price.toLocaleString('ru-RU') %></td>
              <td><%= p.category || '—' %></td>
              <td>
                <% if (p.sold_out) { %>
                  <span class="badge badge-red">Нет в наличии</span>
                <% } else { %>
                  <span class="badge badge-green">В продаже</span>
                <% } %>
              </td>
              <td>
                <div style="display:flex;gap:6px">
                  <a href="/products/<%= p.id %>" class="btn btn-ghost btn-sm">Изменить</a>
                  <a href="/products/<%= p.id %>/stock" class="btn btn-neutral btn-sm">Склад</a>
                </div>
              </td>
            </tr>
          <% } %>
          <% if (!products.length) { %>
            <tr><td colspan="6" style="text-align:center;padding:32px" class="muted">Товаров пока нет</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>
</html>
