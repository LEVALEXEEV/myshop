<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MyShop Admin — Stock</title>
    <style>
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; padding: 24px; }
      a { color: #0b57d0; text-decoration:none; }
      table { width:100%; border-collapse: collapse; margin-top: 16px; }
      th, td { border: 1px solid #ddd; padding: 8px; text-align:left; }
      th { background: #f6f6f6; }
      input { width: 100%; padding: 8px; box-sizing: border-box; }
      button { padding: 10px 12px; margin-top: 12px; }
      .muted { color:#666; }
    </style>
  </head>
  <body>
    <p><a href="/products">← back to list</a> · <a href="/products/<%= product.id %>">product</a></p>
    <h1>Stock: <%= product.title %> (#<%= product.id %>)</h1>

    <form method="post" action="/products/<%= product.id %>/stock">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <div class="muted">Enter rows. Empty rows are ignored. All previous rows are replaced.</div>

      <table>
        <thead>
          <tr>
            <th>Size</th>
            <th>Qty</th>
          </tr>
        </thead>
        <tbody>
          <% const rows = (stock && stock.length ? stock : [{ size: 's', qty: 0 }, { size: 'm', qty: 0 }, { size: 'l', qty: 0 }]); %>
          <% for (const row of rows) { %>
            <tr>
              <td><input name="size" value="<%= row.size %>" /></td>
              <td><input name="qty" type="number" min="0" step="1" value="<%= row.qty %>" /></td>
            </tr>
          <% } %>
          <% for (let i = 0; i < 6; i++) { %>
            <tr>
              <td><input name="size" value="" placeholder="e.g. xl" /></td>
              <td><input name="qty" type="number" min="0" step="1" value="" placeholder="0" /></td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <button type="submit">Save stock</button>
    </form>
  </body>
</html>
