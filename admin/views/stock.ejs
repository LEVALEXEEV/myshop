<%- include('partials/_head', { title: 'Склад' }) %>
<%- include('partials/_nav', { csrfToken, active: 'products' }) %>

<div class="page">

  <div class="breadcrumb">
    <a href="/products">Товары</a>
    <span class="breadcrumb__sep">/</span>
    <a href="/products/<%= product.id %>"><%= product.title %></a>
    <span class="breadcrumb__sep">/</span>
    <span>Склад</span>
  </div>

  <div class="page-header">
    <div>
      <div class="page-header__title">Склад: <%= product.title %></div>
      <div class="page-header__sub">Строки с пустым размером игнорируются. Все предыдущие записи будут заменены.</div>
    </div>
  </div>

  <div class="card" style="max-width:480px">
    <div class="card__header">Остатки по размерам</div>
    <div class="card__body">
      <form method="post" action="/products/<%= product.id %>/stock">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <table style="margin-bottom:16px">
          <thead>
            <tr>
              <th>Размер</th>
              <th>Количество</th>
            </tr>
          </thead>
          <tbody>
            <% const rows = (stock && stock.length ? stock : [{ size: 's', qty: 0 }, { size: 'm', qty: 0 }, { size: 'l', qty: 0 }]); %>
            <% for (const row of rows) { %>
              <tr>
                <td><input class="form-control" name="size" value="<%= row.size %>" /></td>
                <td><input class="form-control" name="qty" type="number" min="0" step="1" value="<%= row.qty %>" /></td>
              </tr>
            <% } %>
            <% for (let i = 0; i < 6; i++) { %>
              <tr>
                <td><input class="form-control" name="size" value="" placeholder="напр., xl" /></td>
                <td><input class="form-control" name="qty" type="number" min="0" step="1" value="" placeholder="0" /></td>
              </tr>
            <% } %>
          </tbody>
        </table>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Сохранить склад</button>
          <a href="/products/<%= product.id %>" class="btn btn-neutral">Назад</a>
        </div>
      </form>
    </div>
  </div>

</div>
</body>
</html>
