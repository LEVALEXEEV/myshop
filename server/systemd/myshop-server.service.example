[Unit]
Description=MyShop Server Service
After=network.target postgresql.service

[Service]
Type=simple
WorkingDirectory=/var/www/myshop/server
EnvironmentFile=/var/www/myshop/server/.env
ExecStart=/usr/bin/node /var/www/myshop/server/server.js
Restart=always
RestartSec=2

# hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/www/myshop /var/lib

[Install]
WantedBy=multi-user.target
